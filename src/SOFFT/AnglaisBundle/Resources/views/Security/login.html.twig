{% extends 'SOFFTAnglaisBundle::layout.html.twig' %}

{% block css %}

    {{ parent() }}
<style type="text/css">

       input[type=password], input[type=text] {
            border-radius: 2px;
            border: 1px solid #4444dd;
           }
           
       form {
           width: 50%;
           float: left;
           margin: 10px;
           border-right: 1px solid #4444dd;
           padding: 10px;
           }
       
</style>

{% endblock %}




{% block body %}

{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">
    <label for="_username">Nom d'utilisateur : </label><br/>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    
    <br/><br/>
    <label for="_password">Mot de passe :</label><br/>
    <input type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <br/><br/>
    <button type="submit">Se connecter</button>
</form>
    
    <div id="create_account">
        <p>C'est votre première visite sur ce site ?</p>
        <p><a href="{{ path('SAB_create_account') }}">Créer un compte</a></p>
    </div>
{% endblock %}