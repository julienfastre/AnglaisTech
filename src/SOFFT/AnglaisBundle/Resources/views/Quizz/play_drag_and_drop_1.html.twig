        {% for m in quizz.mots %}
        
        <div class="metier" id="{{m.id}}" match_a="{{m.id}}" onDragStart="javascript:drag(this, event);" draggable="true">
            {{m.en}}
        </div>
        
        
        {% endfor %}
        
        
    </div>
        
        <div id="liste_description" class="grid_9">
            {% for m in words_shuffled %}
                <div class="description grid_4 "  >
                    <div class="zone_drop zone_verif" id="description_{{m.id}}" match_q="{{m.id}}"></div>
                    <p>{{m.fr}}</p>
                    
                    {% if m.explication != '' %}
                        <div class="explication_mot">
                            <p>{{m.explication}}</p>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
            
        
        
        
        </div>
